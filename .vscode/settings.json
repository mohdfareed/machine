{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "debugpy.debugJustMyCode": false,
    "bandit.importStrategy": "fromEnvironment",
    "bandit.path": [
        "~/.venv/python",
        "-m",
        "bandit"
    ],
    "bandit.ignorePatterns": [
        "tests/*.py",
        "scripts/*.py"
    ],
    "cSpell.ignorePaths": [
        ".vscode",
        ".git",
        ".venv",
        ".pre-commit-config.yaml",
        ".gitignore",
        ".github",
    ],
    "cSpell.words": [
        "aarch",
        "Codespace",
        "Codespaces",
        "dotenv",
        "levelname",
        "levelno",
        "LOCALAPPDATA",
        "mohdfareed",
        "msecs",
        "mypy",
        "nvim",
        "pipx",
        "pwsh",
        "pydantic",
        "pyenv",
        "pylint",
        "pytest",
        "typer",
        "venv",
        "zinit"
    ],
}
