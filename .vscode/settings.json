{
    // python
    "debugpy.debugJustMyCode": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        },
    },
    "black-formatter.args": [
        "--line-length",
        "79"
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
    // spelling
    "cSpell.ignorePaths": [
        ".git",
        ".github",
        ".venv",
        ".vscode",
        ".gitignore",
        ".pre-commit-config.yaml",
        "config",
    ],
    "cSpell.words": [
        "chezmoi",
        "macbook",
        "mohdfareed",
        "pwsh",
        "tailscale",
        "unshallow",
        "venv"
    ],
}
