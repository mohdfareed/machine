{
    // chezmoi
    "files.associations": {
        "*.tmpl": "go",
        "symlink_*": "go",
        // specific files
        ".chezmoiignore": "go",
    },
    // shell
    "shellcheck.customArgs": [
        "--shell=bash" // REVIEW: Find zsh equivalent tool
    ],
    // python
    "debugpy.debugJustMyCode": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        },
    },
    "black-formatter.args": [
        "--line-length",
        "79"
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
    // spelling
    "cSpell.ignorePaths": [
        ".git",
        ".github",
        ".venv",
        ".vscode",
        ".gitignore",
        ".pre-commit-config.yaml",
        "config",
    ],
    "cSpell.words": [
        "chezmoi",
        "macbook",
        "mohdfareed",
        "pwsh",
        "shellcheck",
        "tailscale",
        "unshallow",
        "venv"
    ],
}
