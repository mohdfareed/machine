{
  // ===========================================================================
  // MARK: editor
  // #region ===================================================================
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "editor.guides.bracketPairs": true,
  "editor.formatOnSave": true,
  "editor.occurrencesHighlight": "multiFile",
  "editor.stickyScroll.enabled": true,
  "explorer.confirmDelete": false,
  // whitespace ----------------------------------------------------------------
  "editor.renderWhitespace": "boundary",
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  // # endregion ===============================================================
  // MARK: visual
  // #region ===================================================================
  "workbench.tree.enableStickyScroll": true,
  "workbench.activityBar.location": "top",
  "workbench.editor.showTabs": "single",
  "workbench.panel.showLabels": false,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.rulers": [
    80,
    120
  ],
  // startup -------------------------------------------------------------------
  "workbench.editor.empty.hint": "hidden",
  "workbench.startupEditor": "newUntitledFile",
  "window.openWithoutArgumentsInNewWindow": "on",
  // minimap -------------------------------------------------------------------
  "editor.minimap.renderCharacters": false,
  "editor.minimap.autohide": "mouseover",
  "editor.minimap.showRegionSectionHeaders": true,
  // theme ---------------------------------------------------------------------
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "One Dark Pro Darker",
  "oneDarkPro.bold": true,
  "oneDarkPro.vivid": true,
  "oneDarkPro.markdownStyle": false,
  // font ----------------------------------------------------------------------
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  // # endregion ===============================================================
  // MARK: suggestions
  // #region ===================================================================
  "editor.suggest.preview": true,
  "editor.inlineSuggest.enabled": true,
  "cSpell.showAutocompleteDirectiveSuggestions": false,
  "cSpell.enabledFileTypes": {
    "*": true
  },
  // # endregion ===============================================================
  // MARK: terminal
  // #region ===================================================================
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.gpuAcceleration": "auto",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.enableMultiLinePasteWarning": "auto",
  "terminal.integrated.stickyScroll.enabled": true,
  "terminal.integrated.enableVisualBell": true,
  "accessibility.signals.terminalBell": {
    "sound": "on"
  },
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  // font ----------------------------------------------------------------------
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.fontLigatures.enabled": true,
  // # endregion ===============================================================
  // MARK: git
  // #region ===================================================================
  "git.allowForcePush": true,
  "git.autofetch": "all",
  "git.ignoreLegacyWarning": true,
  "git.ignoreRebaseWarning": true,
  "git.confirmSync": false,
  "git.rebaseWhenSync": true,
  "git.enableSmartCommit": true,
  "git.replaceTagsWhenPull": true,
  "git.openRepositoryInParentFolders": "never",
  "diffEditor.renderSideBySide": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.experimental.showMoves": true,
  "multiDiffEditor.experimental.enabled": true,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "scm.repositories.explorer": true,
  // # endregion ===============================================================
  // MARK: copilot
  // #region ===================================================================
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },
  "chat.useFileStorage": true,
  "chat.mcp.gallery.enabled": true,
  // Beast Mode
  // https://gist.github.com/burkeholland/88af0249c4b6aff3820bf37898c8bacf
  "chat.tools.terminal.enableAutoApprove": true,
  "chat.agent.maxRequests": 100,
  // # endregion ===============================================================
  // MARK: comments
  // #region ===================================================================
  "commentAnchors.scrollPosition": "center",
  "commentAnchors.workspace.lazyLoad": false,
  "commentAnchors.tags.provideAutoCompletion": false,
  "commentAnchors.tags.displayLineNumber": false,
  "commentAnchors.tags.sortMethod": "type",
  "commentAnchors.tags.anchors": {
    "ANCHOR": {
      "enabled": false,
      "scope": "hidden"
    },
    "REVIEW": {
      "highlightColor": "#00ff84",
      "iconColor": "#00ff84",
      "scope": "workspace"
    }
  },
  "commentAnchors.workspace.excludeFiles": "**/{.git,bin,.venv}/**/*",
  // # endregion ===============================================================
  // MARK: markdown
  // #region ===================================================================
  "markdown.preview.typographer": true,
  "markdown.preview.scrollPreviewWithEditor": false,
  "markdown.preview.scrollEditorWithPreview": false,
  "[markdown]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "always"
    },
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  // # endregion ===============================================================
  // MARK: json
  // #region ===================================================================
  "[json]": {
    "editor.indentSize": 2
  },
  // # endregion ===============================================================
  // MARK: swift
  // #region ===================================================================
  "[swift]": {
    "editor.inlayHints.enabled": "offUnlessPressed"
  },
  // # endregion ===============================================================
  // MARK: python
  // #region ===================================================================
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.enablePytestSupport": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.REPL.enableREPLSmartSend": true,
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "notebook.lineNumbers": "on",
  "notebook.formatOnSave.enabled": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "notebook.codeActionsOnSave": {
    "notebook.source.organizeImports": "explicit",
    "notebook.source.fixAll": "explicit"
  },
  "python.testing.pytestArgs": [
    "--color=yes"
  ],
  "ruff.lineLength": 79,
  "python.useEnvironmentsExtension": true,
  // # endregion ===============================================================
  // MARK: c#
  // #region ===================================================================
  "[csharp]": {
    "editor.codeActionsOnSave": {
      "source.addMissingImports": "explicit"
    },
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "dotnet.formatting.organizeImportsOnFormat": true,
  "dotnet.codeLens.enableReferencesCodeLens": false,
  "godotTools.editorPath.godot4": "${GODOT}",
  // # endregion ===============================================================
  // MARK: go
  // #region ===================================================================
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  // # endregion ===============================================================
  // MARK: powershell
  // #region ===================================================================
  "powershell.promptToUpdatePowerShell": false,
  // # endregion ===============================================================
  "cSpell.userWords": [
    "endregion",
    "Fareed",
    "fastmcp",
    "mohdfareed"
  ],
  "chat.viewSessions.orientation": "stacked"
  // REVIEW - new customizations above =========================================
}
